<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="180dp"
    android:background="@drawable/border2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/No"
        android:layout_alignEnd="@id/No"
        android:layout_alignStart="@id/No"
        android:layout_alignTop="@id/No"
        android:background="#F66969"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/No"
        android:layout_alignEnd="@id/center"
        android:backgroundTint="#F48B8B"
        android:text="NO"
        android:textColor="@color/white"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Yes"
        android:layout_alignEnd="@id/Yes"
        android:layout_alignStart="@id/Yes"
        android:layout_alignTop="@id/Yes"
        android:background="#7ADD05" />

    <Button
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/center"
        android:id="@+id/Yes"
        android:backgroundTint="#54E65A"
        android:text="YES"
        android:textColor="@color/white"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/title"
        android:layout_alignBottom="@id/center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:textSize="17sp"
        android:gravity="center"
        android:text="Are you sure you want to\nreset the score?"
        android:textColor="@color/black"
        android:background="#F8F6E7"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:text="TicTacToe"
        android:textColor="@color/white"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:background="#000000"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/black"/>

    <TextView
        android:layout_width="0.7dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@color/black"/>

    <TextView
        android:layout_width="0.7dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/black"/>

</RelativeLayout>